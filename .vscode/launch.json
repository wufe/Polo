{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug server",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"cwd": "${workspaceFolder}/packages/server",
			"env": {
				"POLO_CWD": "${cwd}",
				"GO_ENV": "development"
			},
			"program": "${workspaceFolder}/packages/server/cmd/server/main.go"
		},
		{
			"name": "Debug server (PRO)",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"cwd": "${workspaceFolder}/packages/server",
			"env": {
				"POLO_CWD": "${cwd}",
				"GO_ENV": "development"
			},
			"buildFlags": "-tags=pro",
			"program": "${workspaceFolder}/packages/server/cmd/server/main.go"
		},
		{
			"name": "Debug server (race)",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"cwd": "${workspaceFolder}",
			"env": {
				"POLO_CWD": "${cwd}",
				"GO_ENV": "development",
				"GO_DEBUG": "race"
			},
			"args": [
				"-race"
			],
			"program": "${cwd}/cmd/server/main.go"
		},
		{
			"name": "Debug client",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeArgs": [
				"run",
				"serve"
			],
			"runtimeExecutable": "npm",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "node"
		}
	],
	"compounds": [
		{
			"name": "Debug application",
			"configurations": [
				"Debug client",
				"Debug server"
			]
		},
		{
			"name": "Debug application (PRO)",
			"configurations": [
				"Debug client",
				"Debug server (PRO)"
			]
		},
		{
			"name": "Debug application (race)",
			"configurations": [
				"Debug client",
				"Debug server (race)"
			]
		}
	]
}