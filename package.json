{
	"name": "polo",
	"version": "1.4.0",
	"repository": "https://github.com/Wufe/Polo.git",
	"author": "Simone Bembi <simone.bembi@gmail.com>",
	"license": "MIT",
	"scripts": {
		"dev": "run-p serve start",
		"dev:race": "run-p serve start:race",
		"start:race": "cross-env GO_DEBUG=race GO_ENV=development go run -race cmd/server/main.go",
		"start": "cross-env GO_ENV=development go run cmd/server/main.go",
		"build:docker": "docker build -t polo:local -f ./docker/Dockerfile .",
		"build:server:application": "go build -o polo cmd/server/main.go",
		"start:proxy": "cross-env GO_ENV=development ./polo",
		"start:prod": "run-s build:prod start:proxy:prod",
		"start:proxy:prod": "cross-env GO_ENV=production ./polo",
		"build:client": "cross-env NODE_ENV=development webpack --config webpack.config.js",
		"build:prod": "run-s clean build:client:prod build:server:prod",
		"build:server:prod": "run-s build:server:prod:restore build:server:prod:statik build:server:prod:application",
		"build:server:prod:restore": "go mod download",
		"build:server:prod:statik": "statik -p=services -dest=./pkg -src=./public",
		"build:server:prod:application": "go build -o dist/polo cmd/server/main.go",
		"build:client:prod": "cross-env NODE_ENV=production webpack --config webpack.config.js",
		"build:prod:windows": "run-s clean build:client:prod build:server:prod:windows",
		"build:server:prod:windows": "run-s build:server:prod:restore build:server:prod:statik build:server:prod:application:windows",
		"build:server:prod:application:windows": "cross-env GOOS=windows GOARCH=amd64 go build -o dist/polo.exe cmd/server/main.go",
		"clean": "rimraf dist public release pkg/services/statik.go",
		"serve": "cross-env TAILWIND_MODE=watch node --max-old-space-size=8192 node_modules/webpack/bin/webpack.js serve",
		"build:release": "run-s clean build:client:prod build:server:prod:restore build:server:prod:statik build:release:windows build:release:macos build:release:linux",
		"build:release:windows": "cross-env GOOS=windows GOARCH=amd64 go build -o release/polo-windows-amd64.exe cmd/server/main.go",
		"build:release:macos": "cross-env GOOS=darwin GOARCH=amd64 go build -o release/polo-darwin-amd64 cmd/server/main.go",
		"build:release:linux": "cross-env GOOS=linux GOARCH=amd64 go build -o release/polo-linux-amd64 cmd/server/main.go",
		"test": "cross-env GO_ENV=development GO_CWD=$(pwd) go test -v ./cmd/tests/...",
		"test:file": "cross-env GO_ENV=development GO_CWD=$(pwd) go test -v ",
		"test:watch": "cross-env GO_ENV=development GO_CWD=$(pwd) gow test -v ./cmd/tests/...",
		"test:trace": "cross-env GO_ENV=development GO_CWD=$(pwd) POLO_DIAGNOSTICS=true go test -v ./cmd/tests/...",
		"test:trace:watch": "cross-env GO_ENV=development GO_CWD=$(pwd) POLO_DIAGNOSTICS=true gow test -v ./cmd/tests/...",
		"test:prod": "cross-env GO_ENV=development GO_CWD=$(pwd) go test ./cmd/tests/...",
		"test:prod:watch": "cross-env GO_ENV=development GO_CWD=$(pwd) gow test ./cmd/tests/...",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@babel/core": "^7.12.10",
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-conventional": "^12.1.4",
		"@heroicons/react": "^1.0.1",
		"@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
		"@types/axios": "^0.14.0",
		"@types/react": "^17.0.0",
		"@types/react-dom": "^17.0.0",
		"@types/react-router-dom": "^5.1.7",
		"@types/react-window": "^1.8.2",
		"@types/uuid": "^8.3.0",
		"ansicolor": "^1.1.93",
		"autoprefixer": "^10.2.3",
		"axios": "^0.21.1",
		"babel-loader": "^8.2.2",
		"classnames": "^2.3.1",
		"clean-webpack-plugin": "^3.0.0",
		"color": "^3.1.3",
		"commitizen": "^4.2.4",
		"copy-webpack-plugin": "^7.0.0",
		"cross-env": "^7.0.3",
		"css-loader": "^5.0.1",
		"css-minimizer-webpack-plugin": "^1.2.0",
		"cz-conventional-changelog": "3.3.0",
		"dayjs": "^1.10.4",
		"file-loader": "^6.2.0",
		"fork-ts-checker-webpack-plugin": "^6.1.0",
		"handlebars": "^4.7.7",
		"handlebars-loader": "^1.7.1",
		"hosted-git-info": "^4.0.2",
		"html-webpack-plugin": "^4.5.1",
		"husky": "^7.0.0",
		"is-svg": "^4.3.1",
		"mini-css-extract-plugin": "^1.3.4",
		"mobx": "^6.0.4",
		"mobx-devtools-mst": "^0.9.30",
		"mobx-react": "^7.0.5",
		"mobx-react-lite": "^3.1.6",
		"mobx-state-tree": "^5.0.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.2.15",
		"postcss-loader": "^4.2.0",
		"preact": "^10.5.12",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-refresh": "^0.9.0",
		"react-router-dom": "^5.2.0",
		"react-window": "^1.8.6",
		"rimraf": "^3.0.2",
		"sass": "^1.34.0",
		"sass-loader": "^10.1.1",
		"style-loader": "^2.0.0",
		"tailwind-nord": "^1.2.0",
		"tailwindcss": "^2.1.2",
		"ts-loader": "^8.0.14",
		"tsconfig-paths-webpack-plugin": "^3.3.0",
		"typescript": "^4.3.5",
		"url-parse": "^1.5.1",
		"uuid": "^8.3.2",
		"webpack": "^5.17.0",
		"webpack-cli": "^4.4.0",
		"webpack-dev-server": "^3.11.2"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	}
}
